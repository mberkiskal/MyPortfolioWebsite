@using MVCCV.Models.Entity;
@model List<TBLSOCIALMEDIA>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Edit Social Media Account</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Social Media Account</th>
                                            <th>Status</th>
                                            <th>Edit</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                           
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.ACCOUNT</td>
                                                <td>@item.STATUS</td>
                                                <td>
                                                    <a class="btn btn-info btn-sm" href="/SocialMedia/BringSocialMedia/@item.ID">
                                                        <i class="fas fa-pencil-alt">
                                                        </i>
                                                        Update
                                                    </a>
                                                    <a class="btn btn-danger btn-sm" href="/SocialMedia/DeleteSocialMedia/@item.ID">
                                                        <i class="fas fa-trash">
                                                        </i>
                                                       Set Passive
                                                    </a>
                                                </td>
                                            </tr>

                                        }
                                    </tbody>
                                </table>
                                <br />
                                <button class="btn btn-info" data-toggle="modal" data-target="#modal1">Add Social Media Account</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="modal" id="modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">Add Social Media Account Panel</h2>
                    </div>
                    <form method="post" action="/SocialMedia/AddSocialMedia">
                        <div class="modal-body">
                            <label>Platform:</label>
                            <input type="text" name="ACCOUNT" class="form-control" />
                            <br />
                            <label>Link:</label>
                            <input type="text" name="LINK" class="form-control" />
                            <br />
                            <label>Icon:</label>
                            <input type="text" name="ICON" class="form-control" />
                            <br />
                            <button class="btn btn-success">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

